# VoiceLink Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development
CLIENT_URL=http://localhost:8080

# Firebase Admin Configuration
# Download your Firebase service account key from Firebase Console
# Go to: Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key_from_service_account
FIREBASE_CLIENT_EMAIL=your_client_email@appspot.gserviceaccount.com

# Database Configuration
# PostgreSQL (for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/voicelink

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=100

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRY=7d

# IVR Configuration
IVR_PROVIDER=twilio
# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_API_KEY_SID=your_twilio_api_key_sid
TWILIO_API_KEY_SECRET=your_twilio_api_key_secret

# ElevenLabs Text-to-Speech Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL=eleven_monolingual_v1

# Email Configuration (for alerts and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_MOCK_DATA=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
